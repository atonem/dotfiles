# So much color
[color]
  ui = always

[color "branch"]
  current = green bold
  local = green
  remote = yellow

[color "diff"]
  frag = magenta
  meta = yellow
  new = green
  old = red

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[color "status"]
  added = green reverse
  changed = yellow reverse
  untracked = red reverse

[core]
  editor = nvim
  ; pager = delta
  ; pager = 'difft'
  difftool = true
  abbrev = 12
  attributesfile = ~/.gitattributes
  excludesfile = ~/.gitignore_global
  autocrlf = input
  mergeoptions = --no-edit
  ignorecase = false

[interactive]
  diffFilter = delta --color-only

; [delta]
;   navigate = true    # use n and N to move between diff sections
;   light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
;   line-numbers = true
;   side-by-side = true

[difftool "difftastic"]
    # See `man git-difftool` for a description of MERGED, LOCAL and REMOTE.
    cmd = difft "$MERGED" "$LOCAL" "abcdef1" "100644" "$REMOTE" "abcdef2" "100644"

[difftool]
  prompt = false

[merge]
  conflictstyle = diff3

; [diff]
;   colorMoved = default

[diff]
  external = difft
  tool = difftastic

[pretty]
  custom = "%C(magenta)%h%C(red)%d %C(yellow)%ar %C(green)%s %C(yellow)(%an)"
  #                     │        │            │            │             └─ author name
  #                     │        │            │            └─ message
  #                     │        │            └─ date (relative)
  #                     │        └─ decorations (branch, heads or tags)
  #                     └─ hash (abbreviated)

[help]
# Correct typos
autocorrect = 0

# Use separate file for username / github token / etc
[include]
  path = ~/.gitconfig.local
[credential]
	helper = osxkeychain
[core]
  excludesfile = ~/.gitignore_global
	; hooksPath = ~/dotfiles/etc/git/hooks
[init]
	defaultBranch = master
	; templatedir = ~/.git_template
[push]
  default = current
[alias]
  is-wip = "![[ $(git log -1 --pretty=%B) == 'WIP DO NOT PUSH' ]]"
  wip = "!git add -A && git commit -n -m 'WIP DO NOT PUSH'"
  wip-restore = "!git is-wip && git reset --soft HEAD~1 && git reset"
  # find branch
  fb = "!f() { git branch --list | grep \"$1\"; }; f"
; 	ctags = !.git/hooks/ctags
[user]
	email = anton.emmerik@leovegas.com
	name = Anton Emmerik
[protocol]
	version = 2

